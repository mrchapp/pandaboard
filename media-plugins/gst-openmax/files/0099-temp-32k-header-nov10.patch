diff --git a/omx/timer-32k.h b/omx/timer-32k.h
new file mode 100644
index 0000000..98fc2dc
--- /dev/null
+++ b/omx/timer-32k.h
@@ -0,0 +1,48 @@
+/*
+ * OMAP2/3/4 timer32k driver interface
